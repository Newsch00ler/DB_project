{% extends "main_layout.twig" %}

{% block layout %}
<header>
    <nav class="navbar sticky-top navbar-expand-lg" style="background: linear-gradient(90deg, rgba(30, 30, 223, 0.842) 0%, rgba(2, 0, 36, 0.774) 50%, rgba(255, 0, 0, 0.842) 100%);">
        <div class="container" style="justify-content: space-between;">
            <div class="container">
                <a class="navbar-brand" href="/" >
                    <img class="scale" src="/images/logo.svg" style="max-height: 32pt;">   
                </a>  
            </div>
            <div class="collapse navbar-collapse justify-end" id="navbarNav">
                <ul class="navbar-nav"> 
                    <li class="nav-item dropdown" style="margin-left: 30px;">
                        <a class="nav-link dropdown-toggle button" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{dropdown_header}}
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="{{first_url}}">
                                    {{first_card_header}}
                                </a>                                
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{second_url}}">
                                    {{second_card_header}}
                                </a>
                            </li>
                        </ul>                  
                    </li> 
                    
                    <li class="nav-item" style="margin-left: 30px;">
                        <a class="nav-link button" href="/logout">Выход</a>
                    </li> 
                </ul>
            </div>            
        </div>
    </nav>
</header>
    <div class="container">
        {% block content %}
        {% endblock %}    
    </div> 
{% endblock %}